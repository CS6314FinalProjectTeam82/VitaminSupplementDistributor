<%- include ('partials/header') %>

<div class="container">
    <div class="row">

        <h3><%= product.name %></h3>
        <div class="col-md-4">
            <div class="row">
                <img class="img-responsive" src="images/<%= product.Image %>" alt="product-img" />
            </div>
            <div>
                <hr>
                <h4>Dietary Restrictions:</h4>
                    <ul>
                        <% product.dietaryconsideration.forEach(function(dietaryconsideration){ %>
                        <li><%= dietaryconsideration + "," %></li>
                        <% }); %>
                    </ul>
                <hr>
            </div>        
        </div>

        <div class="col-md-8">
            <h4>Your Price:</h4>
            <h5>Item Description :  </h5>
            <p><%= product.itemdescription %></p>
            <hr>
            <div class="row">
                <div class="col-md-6">
                    <h4 > Supplementary Facts</h4>
                    <div >
                        <h6 style="display: inline"> Serving size :</h6>
                        <p><%= product.supplementfacts.servingsize %></p>
                    </div>
                    <div >
                        <h6 style="display: inline">Serving per Container</h6>
                        <p><%= product.supplementfacts.servingpercontainer %></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h4>Specifications</h4>
                    <p><%= product.specifications %></p>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-4">
                    <h4>Amount Per Serving</h4>
                </div>
                <div class="col-md-4">
                    <h4>% Daily Value</h4>
                </div>
                <% product.composition.forEach(function(item){ %>
                    <div class="row">
                        <div class="col-md-4">  
                            <p><%= item.itemname %></p>
                        </div>
                        <div class="col-md-4">
                            <p><%= item.amountperserving%></p>
                        </div>
                        <div class="col-md-4">
                            <p><%= item.persondailyvalue%></p>
                        </div>  
                    </div>
                <% }); %>
            </div>
            <h4>Other Ingredients:</h4>
            <% product.otheringredients.forEach(function(ingredient){ %>
                <p style="display: inline;"><%= ingredient + "," %></p>
            <% }); %>
        </div>

    </div>
</div>


<%- include ('partials/footer') %>